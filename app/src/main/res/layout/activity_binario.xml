<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#032A39"
    tools:context=".Binario">

    <TextView
        android:id="@+id/tv_titulobd"
        android:layout_width="321dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:text="BINÁRIO PARA DECIMAL"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imagebtn_returnb"
        android:layout_width="34dp"
        android:layout_height="37dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="64dp"
        android:background="#032A39"
        android:onClick="opera"
        android:tint="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <ImageButton
        android:id="@+id/btn_bo"
        android:layout_width="29dp"
        android:layout_height="25dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:background="#032A39"
        android:onClick="opera"
        android:tint="@color/purple_200"
        app:layout_constraintStart_toEndOf="@+id/et_bo"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulobo"
        app:srcCompat="@android:drawable/ic_menu_send" />

    <EditText
        android:id="@+id/et_bo"
        android:layout_width="80dp"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="number"
        android:numeric="decimal"
        android:text="0"
        android:textColor="@color/teal_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulobo" />

    <TextView
        android:id="@+id/tv_titulobo"
        android:layout_width="321dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="BINÁRIO PARA OCTAL"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bh" />

    <ImageButton
        android:id="@+id/btn_bd"
        android:layout_width="29dp"
        android:layout_height="25dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="22dp"
        android:background="#032A39"
        android:onClick="opera"
        android:tint="@color/purple_200"
        app:layout_constraintStart_toEndOf="@+id/et_bd"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulobd"
        app:srcCompat="@android:drawable/ic_menu_send" />

    <EditText
        android:id="@+id/et_bd"
        android:layout_width="80dp"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:duplicateParentState="false"
        android:editable="false"
        android:ems="10"
        android:inputType="number"
        android:numeric="decimal"
        android:text="0"
        android:textColor="@color/teal_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulobd" />

    <TextView
        android:id="@+id/tv_bd"
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textColor="@color/purple_200"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/btn_bd"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulobd" />

    <TextView
        android:id="@+id/tv_titulobh"
        android:layout_width="321dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="BINÁRIO PARA HEXADECIMAL"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_bd" />

    <TextView
        android:id="@+id/tv_bh"
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textColor="@color/purple_200"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/btn_bh"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulobh" />

    <ImageButton
        android:id="@+id/btn_bh"
        android:layout_width="29dp"
        android:layout_height="25dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:background="#032A39"
        android:onClick="opera"
        android:tint="@color/purple_200"
        app:layout_constraintStart_toEndOf="@+id/et_bh"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulobh"
        app:srcCompat="@android:drawable/ic_menu_send" />

    <TextView
        android:id="@+id/tv_bo"
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textColor="@color/purple_200"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/btn_bo"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulobo" />

    <EditText
        android:id="@+id/et_bh"
        android:layout_width="80dp"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="number"
        android:numeric="decimal"
        android:text="0"
        android:textColor="@color/teal_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulobh" />

</androidx.constraintlayout.widget.ConstraintLayout>