<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#032A39"
    tools:context=".Decimal">

    <TextView
        android:id="@+id/tv_titulodb"
        android:layout_width="328dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:text="DECIMAL PARA BINÁRIO"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_titulodo"
        android:layout_width="328dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:text="DECIMAL PARA OCTAL"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_dh" />

    <EditText
        android:id="@+id/et_do"
        android:layout_width="80dp"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="number"
        android:numeric="decimal"
        android:text="0"
        android:textColor="@color/teal_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulodo" />

    <EditText
        android:id="@+id/et_dh"
        android:layout_width="80dp"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="number"
        android:numeric="decimal"
        android:text="0"
        android:textColor="@color/teal_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulodh" />

    <TextView
        android:id="@+id/tv_db"
        android:layout_width="219dp"
        android:layout_height="81dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textColor="@color/purple_200"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/btn_db"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulodb" />

    <TextView
        android:id="@+id/tv_dh"
        android:layout_width="219dp"
        android:layout_height="81dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textColor="@color/purple_200"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/btn_db"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulodh" />

    <TextView
        android:id="@+id/tv_do"
        android:layout_width="219dp"
        android:layout_height="81dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textColor="@color/purple_200"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/btn_db"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulodo" />

    <ImageButton
        android:id="@+id/btn_db"
        android:layout_width="29dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="45dp"
        android:background="#032A39"
        android:onClick="btn_db"
        android:tint="@color/purple_200"
        app:layout_constraintEnd_toStartOf="@+id/tv_db"
        app:layout_constraintStart_toEndOf="@+id/et_db"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulodb"
        app:srcCompat="@android:drawable/ic_menu_send" />

    <TextView
        android:id="@+id/tv_titulodh"
        android:layout_width="328dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:text="DECIMAL PARA HEXADECIMAL"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_db" />

    <ImageButton
        android:id="@+id/btn_do"
        android:layout_width="29dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:background="#032A39"
        android:onClick="btn_do"
        android:tint="@color/purple_200"
        app:layout_constraintStart_toEndOf="@+id/et_do"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulodo"
        app:srcCompat="@android:drawable/ic_menu_send" />

    <ImageButton
        android:id="@+id/btn_dh"
        android:layout_width="29dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:background="#032A39"
        android:onClick="btn_dh"
        android:tint="@color/purple_200"
        app:layout_constraintStart_toEndOf="@+id/et_dh"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulodh"
        app:srcCompat="@android:drawable/ic_menu_send" />

    <EditText
        android:id="@+id/et_db"
        android:layout_width="80dp"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="number"
        android:numeric="decimal"
        android:text="0"
        android:textColor="@color/teal_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulodb" />

    <ImageButton
        android:id="@+id/imagebtn_returnd"
        android:layout_width="34dp"
        android:layout_height="37dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="64dp"
        android:background="#032A39"
        android:onClick="imagereturn"
        android:tint="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />
</androidx.constraintlayout.widget.ConstraintLayout>